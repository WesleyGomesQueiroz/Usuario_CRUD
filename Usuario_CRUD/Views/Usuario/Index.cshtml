@{
    ViewData["Title"] = "Usuarios";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
</head>

<body>
    <div class="col-sm-12">
        <h5>@ViewData["Title"]</h5>
    </div>

    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <button type="button" class="btn btn-info" onClick="abreModalNovoUsuario()">
                    Cadastrar Novo Usuario
                </button>
            </div>
        </div>
    </div>

    <div class="col-sm-12" style="margin-top: 10px;">
        <table class="table table-striped table-bordered" id="tbResultado" style="text-align:center;">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>E-mail</th>
                    <th>Status</th>
                    <th>DT Cadastro</th>
                    <th>  </th>
                </tr>
            </thead>

            <tbody id="listaUsuarios"> </tbody>

        </table>
    </div>

    <!-- MODAL NOVO USUARIO -->
    <div class="modal modal-novo-usuario" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Cadastro de Usuario</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="col-sm-12">
                        <div class="mensagem-perfil-novo" role="alert"></div>
                    </div>

                    <div class="form-group col-sm-12">
                        <label>Nome:</label>
                        <input type="text" class="form-control" maxlength="61" id="nome_id" />
                    </div>

                    <div class="form-group col-sm-12">
                        <label>E-mail:</label>
                        <input type="email" class="form-control" maxlength="61" id="email_id" />
                    </div>

                    <div class="form-group col-sm-12">
                        <label>Ativar: <sub><input type="checkbox" id="ativar_id" /></sub> </label>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-info" onClick="salvarNovoUsuario()">Salvar</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- MODAL EDITAR USUARIO -->
    <div class="modal modal-editar-usuario" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Cadastro de Usuario</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="col-sm-12">
                        <div class="mensagem-perfil-novo" role="alert"></div>
                    </div>

                    <div class="form-group col-sm-12">
                        <label>Nome:</label>
                        <input type="text" class="form-control" maxlength="61" id="editar_nome_id" />
                    </div>

                    <div class="form-group col-sm-12">
                        <label>E-mail:</label>
                        <input type="email" class="form-control" maxlength="61" id="editar_email_id" />
                    </div>

                    <div class="form-group col-sm-12">
                        <label>Ativar: <sub><input type="checkbox" id="editar_ativar_id" /></sub> </label>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-info" onClick="salvarEditarUsuario()">Salvar</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript" src="~/js/Usuario/jUsuario.js"></script>
</body>
</html>


